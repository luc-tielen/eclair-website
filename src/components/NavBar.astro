---
import { Icon } from "astro-icon";
import DesktopPagesMenu from "./DesktopPagesMenu.astro";
import MobilePagesMenu from "./MobilePagesMenu";
---

<nav class="mx-auto max-w-3xl px-4 sm:px-6 lg:px-8">
  <DesktopPagesMenu />
  <MobilePagesMenu showLogo={Astro.url.pathname !== "/"} client:load>
    <span slot="github-icon"><Icon class="w-8 h-8" name="mdi:github" /></span>
    <span slot="discord-icon"><Icon class="w-8 h-8" name="ic:baseline-discord" /></span>
  </MobilePagesMenu>
</nav>
